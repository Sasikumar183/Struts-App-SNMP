<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
    "https://struts.apache.org/dtds/struts-6.0.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">

        <action name="itemList" class="com.example.action.ItemAction">
            <result>/index.jsp</result>
        </action>

		<action name="getAllItems" class="com.example.action.ItemRestAction">
		    <result type="stream">
		        <param name="inputName">inputStream</param>
		        <param name="contentType">text/plain</param>
		    </result>
		</action>
		
		<action name="rename" class="com.example.site24x7.restapi.RenameInterfaceName">
            <result name="success" type="stream">
                <param name="inputName">input</param>
                <param name="contentType">text/plain</param>
            </result>
        </action>
        
        <action name="delete" class="com.example.site24x7.restapi.DeleteInterfaceData">
            <result name="success" type="stream">
                <param name="inputName">input</param>
                <param name="contentType">text/plain</param>
            </result>
        </action>
        
        <action name="getdata" class="com.example.site24x7.restapi.GetData">
            <result name="success" type="stream">
                <param name="inputName">input</param>
                <param name="contentType">text/plain</param>
            </result>
        </action>
        
	
    </package>
</struts>
